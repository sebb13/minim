{__CONTENTS__}
<form method="post" action="#" id="daftPreviewForm">
	<input type="hidden" name="draftPageName" id="draftPageName" value="{__DRAFT_PAGE_NAME__}" />
	<input type="hidden" name="draftLang" id="draftLang" value="{__DRAFT_LANG__}" />
	<fieldset>
		<legend>{__CONTROLS__}</legend>
		<div class="row">
			<div class="col-md-3">
				<input type="submit" id="saveButton" value="{__SAVE__}" />
			</div>
			<div class="col-md-3">
				<input type="button" id="backButton" value="{__BACK__}" />
			</div>
			<div class="col-md-3">
				<input type="button" id="resetDraft" value="{__RESET__}" />
			</div>
		</div>
	</fieldset>
</form>